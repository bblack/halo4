#container{:style => 'width: 600px; height: 400px;'}
:javascript
  $(function(){
    var chartOpts = {
      chart: {
        renderTo: 'container',
        zoomType: 'x'
      },
      plotOptions: {
        line: {
          lineWidth: 1,
          shadow: false,
          marker: {
            enabled: false
          }
        }
      },
      title: {
        text: 'KDR: #{params[:gamertag]}'
      },
      xAxis: {
        type: 'datetime'
      },
      yAxis: {
        title: {
          text: 'KDR'
        }
      },
      tooltip: {
        formatter: function() { return new Date(this.x).toString() + '<br/>Spread: ' + this.y.toString(); }
      },
    };

    $.ajax({
      url: '/data/kdr/#{params[:gamertag]}',
      success: function(d) {
        chartOpts.series = [{name: "KDR", data: d}];
        var chart = new Highcharts.Chart(chartOpts);
      }
    })
  });